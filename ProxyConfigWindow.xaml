<Window
    x:Class="VivaldiUpdater.ProxyConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding LocalizedProxyConfigTitle}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="Manual"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="tinyStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <!--  Semi-transparent overlay background  -->
    <Grid Background="#80000000" MouseLeftButtonDown="Overlay_MouseLeftButtonDown">
        <!--  Main content card  -->
        <Border
            Width="380"
            Height="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#EFD6F3"
            CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Direction="270"
                    ShadowDepth="5"
                    Color="#40000000" />
            </Border.Effect>

            <!--  Main Grid  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Title Bar  -->
                <Border
                    Grid.Row="0"
                    Background="#F5798B"
                    CornerRadius="15,15,0,0">
                    <Grid MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding LocalizedProxyConfigTitleWithEnglish}" />
                        <Button
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Content="×"
                            Cursor="Hand"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF1493" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!--  Content Area  -->
                <Grid Grid.Row="1" Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Enable Proxy  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="0,5,0,5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="EnableProxyCheckBox"
                            VerticalAlignment="Center"
                            Checked="EnableProxyCheckBox_Checked"
                            Content="{Binding LocalizedEnableProxy}"
                            Style="{StaticResource AppleCheckBoxStyle}"
                            Unchecked="EnableProxyCheckBox_Unchecked" />
                    </StackPanel>

                    <!--  Proxy Type  -->
                    <StackPanel
                        x:Name="ProxyTypePanel"
                        Grid.Row="1"
                        Margin="0,0,0,5"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="70"
                            VerticalAlignment="Center"
                            Text="{Binding LocalizedProxyType}" />
                        <ComboBox
                            x:Name="ProxyTypeComboBox"
                            Width="180"
                            Style="{StaticResource AppleComboBoxStyle}">
                            <ComboBoxItem
                                Content="HTTP"
                                Style="{StaticResource AppleComboBoxItemStyle}"
                                Tag="Http" />
                            <ComboBoxItem
                                Content="SOCKS5"
                                Style="{StaticResource AppleComboBoxItemStyle}"
                                Tag="Socks5" />
                        </ComboBox>
                    </StackPanel>

                    <!--  Proxy Host  -->
                    <StackPanel
                        x:Name="ProxyHostPanel"
                        Grid.Row="2"
                        Margin="0,0,0,5"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="70"
                            VerticalAlignment="Center"
                            Text="{Binding LocalizedHost}" />
                        <TextBox
                            x:Name="ProxyHostTextBox"
                            Width="180"
                            Style="{StaticResource AppleTextBoxStyle}" />
                    </StackPanel>

                    <!--  Proxy Port  -->
                    <StackPanel
                        x:Name="ProxyPortPanel"
                        Grid.Row="3"
                        Margin="0,0,0,5"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="70"
                            VerticalAlignment="Center"
                            Text="{Binding LocalizedPort}" />
                        <TextBox
                            x:Name="ProxyPortTextBox"
                            Width="180"
                            Style="{StaticResource AppleTextBoxStyle}" />
                    </StackPanel>

                    <!--  Username  -->
                    <StackPanel
                        x:Name="ProxyUsernamePanel"
                        Grid.Row="4"
                        Margin="0,0,0,5"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="70"
                            VerticalAlignment="Center"
                            Text="{Binding LocalizedUsername}" />
                        <TextBox
                            x:Name="ProxyUsernameTextBox"
                            Width="180"
                            Style="{StaticResource AppleTextBoxStyle}" />
                    </StackPanel>

                    <!--  Password  -->
                    <StackPanel
                        x:Name="ProxyPasswordPanel"
                        Grid.Row="5"
                        Margin="0,0,0,5"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="70"
                            VerticalAlignment="Center"
                            Text="{Binding LocalizedPassword}" />
                        <PasswordBox
                            x:Name="ProxyPasswordTextBox"
                            Width="180"
                            Style="{StaticResource ApplePasswordBoxStyle}" />
                    </StackPanel>

                    <!--  Buttons  -->
                    <StackPanel
                        Grid.Row="7"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="90"
                            Height="55"
                            Margin="0,0,10,0"
                            Click="OkButton_Click"
                            Content="{Binding LocalizedOk}"
                            Style="{StaticResource ApplePriButtonStyle}" />
                        <Button
                            Width="90"
                            Height="55"
                            Click="CancelButton_Click"
                            Content="{Binding LocalizedCancel}"
                            Style="{StaticResource ApplePriButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>